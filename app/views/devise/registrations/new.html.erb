
<div class="container-fluid overlay">
<% (1...31).to_a.shuffle.each do |i|%>

<div class="col-md-2 col-xs-4 registration ">
  <%= image_tag("/r#{i}.jpg", class: "img-responsive")%>
</div>
<% end %>
</div>
<div class="col-md-12 col-xs-12 mainn labe ">
<div class="innerdiv col-md-2 col-md-offset-5 col-xs-10 col-xs-offset-1">
<h1><%= image_tag("/logo.png", size: "150") %></h1>
<h1> FOREVER </h1>
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
 
  <div class="field ">
    <%= f.label :username, class:"labe" %><br />
    <%= f.text_field :name, autofocus: true, class: "transparent-input" %>
  </div>
  <div class="field">
    <%= f.label :Profile_Picture, class:"labe" %><br>
    <%= f.file_field :avatar %>
  </div>
  <div class="field">
    <%= f.label :Cover_Photo, class:"labe" %><br>
    <%= f.file_field :cover %>
  </div>  
  <div class="field">
    <%= f.label :email, class:"labe" %><br />
    <%= f.email_field :email, autofocus: true, class: "transparent-input" %>
  </div>

  <div class="field">
    <%= f.label :password, class:"labe" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "transparent-input"%>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class:"labe" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "transparent-input" %>
  </div>
  <br />
  <div class="actions">
    <%= f.submit "Sign up", class: "transparent-input labe" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
