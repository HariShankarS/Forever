<%= render partial: "background/bg" %>
<div class="col-md-12 col-xs-12 mainn labe ">
  <div class="innerdiv col-md-2 col-md-offset-5 col-xs-10 col-xs-offset-1">
    <% if resource.errors.empty? %>
      <h1> FOREVER </h1>
      <h2>Sign up</h2><br>
    <% else %>
      <%= bootstrap_devise_error_messages! %>
    <% end -%>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %> 
      <div class="field ">
        <%= f.label :username, class:"labe" %>
        <%= f.text_field :name, autofocus: true, class: "transparent-input" %>
      </div>
      <div class="field">
        <%= f.label :Profile_Picture, class:"labe" %>
        <%= f.file_field :avatar %>
      </div>
      <div class="field ">
        <%= f.label :status, class:"labe" %> <br>
        <%= f.text_field :status, autofocus: true, class: "transparent-input" %>
      </div>
      <div class="field ">
        <%= f.label :Date_of_birth, class:"labe" %>
        <%= f.text_field :dob, autofocus: true, class: "transparent-input" %>
      </div>
      <div class="field ">
        <%= f.label :occupation, class:"labe" %>
        <%= f.text_field :occupation, autofocus: true, class: "transparent-input" %>
      </div>
      <div class="field">
        <%= f.label :email, class:"labe" %><br>
        <%= f.email_field :email, autofocus: true, class: "transparent-input" %>
      </div>
      <div class="field">
        <%= f.label :password, class:"labe" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "off", class: "transparent-input"%>
      </div>
      <div class="field">
        <%= f.label :password_confirmation, class:"labe" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "transparent-input" %>
      </div>
      <br>
      <div class="actions">
        <%= f.submit "Sign up", class: "transparent-input labe" %>
      </div>
    <% end %>
  </div>
</div>
