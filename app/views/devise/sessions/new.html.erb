<%= render partial: "background/bg" %>
<div class="col-md-12 col-xs-12 mainn labe">
  <div class="col-md-2 col-md-offset-5 col-xs-8 col-xs-offset-2">
    <% if resource.errors.empty? %>
      <h1><%= image_tag("/logo.png", size: "150") %></h1>
      <br>
      <h1> FOREVER </h1>
      <h2>Sign In </h2><br>
    <% else %>
      <%= bootstrap_devise_error_messages! %>
    <% end -%>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class:"labe" %><br />
        <%= f.email_field :email, autofocus: true, class: "transparent-input" %>
      </div>

      <div class="field">
        <%= f.label :password, class:"labe" %><br />
        <%= f.password_field :password, autocomplete: "off", class: "transparent-input" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class:"labe" %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", class: "transparent-input labe" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
