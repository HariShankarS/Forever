<%= form_for([post, post.comments.build], remote: true) do |f| %>
  	<div id="resizable" class="col-md-10 form-group emoji-picker clearfix">
		<%= f.text_field :cmnt, class: "user-writing textarea ", data: { emojiable: true }, placeholder: "Add a comment"%>
	</div>
  	<div class="col-md-10">
		<%= f.submit :Create, class: "btn btn-raised btn-info create-comment"%>
	</div>
<% end %>